// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
id Int @id @default(autoincrement()) 
name String @unique
articles Article[]
}

model Article {
id Int @id @default(autoincrement()) 
title String @unique
author User @relation(fields: [authorId], references: [id])
authorId Int
}
